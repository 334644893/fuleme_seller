<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/evaluate_content_1"
    android:orientation="vertical"
    tools:context="com.fuleme.business.fragment.OrderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_i_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|left"
            android:lines="1"
            android:paddingLeft="10dp"
            android:text="门店"
            android:textColor="@color/color_swipe" />

        <TextView
            android:id="@+id/tv_i_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="昨日"
            android:textColor="@color/color_swipe" />

        <TextView
            android:id="@+id/tv_i_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center|right"
            android:lines="1"
            android:paddingRight="10dp"
            android:text="今日"
            android:textColor="@color/color_swipe" />

    </LinearLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/demo_swiperefreshlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_m_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:overScrollMode="never"
            android:scrollbars="none" />
        <TextView
        android:id="@+id/none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="订单空空如也"
        android:visibility="gone" />

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
