<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/ll_ppp"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/user_avator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        fresco:actualImageScaleType="focusCrop"
        fresco:failureImage="@mipmap/icon_err"
        fresco:progressBarImage="@mipmap/icon_load"
        fresco:progressBarAutoRotateInterval="1000"
        fresco:placeholderImage="@mipmap/logo_de" />

    <ImageView
        android:id="@+id/iv_ppp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/icon5"
        android:visibility="gone"/>

</LinearLayout>