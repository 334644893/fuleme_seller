<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/evaluate_content_1"
    android:orientation="vertical">

    <include layout="@layout/item_actionbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">


        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/evaluate_content_1"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp">

            <LinearLayout
                android:id="@+id/tv_but_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tv_but_im_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon26" />

                <TextView
                    android:id="@+id/tv_but_tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="页面1"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/text_size_s_s" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/tv_but_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tv_but_im_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_order" />

                <TextView
                    android:id="@+id/tv_but_tv_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="页面1"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/text_size_s_s" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_but_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tv_but_im_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon25" />

                <TextView
                    android:id="@+id/tv_but_tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="页面1"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/text_size_s_s" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_but_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tv_but_im_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon39" />

                <TextView
                    android:id="@+id/tv_but_tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="设置"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/text_size_s_s" />

            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_bottom" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/ll_bottom"
            android:background="@color/evaluate_content_2" />
    </RelativeLayout>
</LinearLayout>