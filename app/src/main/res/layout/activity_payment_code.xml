<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/evaluate_content_1"
    android:orientation="vertical"

    tools:context="com.fuleme.business.activity.PaymentCodeActivity">

    <include layout="@layout/item_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@mipmap/icon_shoukuanbg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_qian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="￥8.00"
            android:textColor="@color/cancel_normal_1"
            android:textSize="@dimen/text_size_35" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="sdsdsdsdsdsd"

            android:textColor="@color/black_87"
            android:textSize="@dimen/text_size_25" />

        <ImageView
            android:id="@+id/iv_ba_qr_code"
            android:layout_width="205dp"
            android:layout_height="205dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"

            android:background="@drawable/shape_zhifubao_line"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="特约商家"
            android:textColor="@color/black_87"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</LinearLayout>
